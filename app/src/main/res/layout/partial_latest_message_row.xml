<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/partial_latest_message_row_img_user_picture"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            tools:background="@drawable/btn_circle_dark_blue"/>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="start|top"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/partial_latest_message_row_txt_username"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User Name"/>

        <TextView
                android:id="@+id/partial_latest_message_row_txt_message"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textColor="@color/textColorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sample message that is really long and ellipsizes at the end"/>

    </LinearLayout>

</LinearLayout>